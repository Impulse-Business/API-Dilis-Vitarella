{
    "openapi": "3.0.0",
    "info": {
      "title": "API Dilis Vitarella",
      "description": "Esta API é referente ao sistema de envio de mensagens para clientes cadastrados no sistema do São João",
      "version": "1.0.0",
      "contact": {
        "email": "daniel.impulseb@gmail.com"
      }
    },
    "servers": [
      {
        "url": "http://45.179.88.29:4444"
      }
    ],
    "paths": {
      "/sendManual": {
        "post": {
          "tags": ["Envio de Mensagem"],
          "description": "Rota para disparo de mensagens manualmente através do sistema.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "cellphone": {
                            "type": "string"
                          },
                          "videoLink": {
                            "type": "string"
                          }
                        },
                        "required": ["name", "cellphone", "videoLink"]
                      }
                    }
                  },
                  "required": ["data"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Mensagens enviadas com sucesso!",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    },
                    "required": ["message"]
                  },
                  "example": {
                    "message": "Mensagens enviadas com sucesso!"
                  }
                }
              }
            },
            "500": {
              "description": "Erro no servidor"
            }
          }
        }
      }
    }
  }